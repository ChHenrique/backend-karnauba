generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model City {
  id          String   @id
  name        String
  state       String
  description String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  
  admin       User     @relation("adminCity",fields: [adminId], references: [id])
  adminId     String   @unique 

  places      Place[]
  events      Event[]
}


model Place {
  id          String   @id @unique
  name        String
  description String
  imageUrl    String
  address     String
  latitude    Float?
  longitude   Float?
  color01     String?
  color02     String?
  instagram   String?
  whatsapp     String?

  createdAt   DateTime @default(now())
  category    Category

  cityId      String
  city        City      @relation(fields: [cityId], references: [id])

}

model Event {
  id          String   @id @unique
  name        String
  description String
  imageUrl    String
  startDate   DateTime
  endDate     DateTime
  location    String

  cityId      String
  city        City     @relation(fields: [cityId], references: [id])

  createdAt   DateTime @default(now())
}


model Image {
  id         String   @id 
  url        String
  modelId    String
  modelType  String
  createdAt  DateTime @default(now())

  @@index([modelId, modelType])
}

model User {
  id        String   @id
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  
  city      City?    @relation("adminCity")

}

enum Role {
  USER
  ADMIN
}

enum Category {
  RESTAURANTE
}

